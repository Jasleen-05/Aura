<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EmergencyFragment"
    android:background="#FFF8E1">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/btnEmergency"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Emergency shout
            'Aura'"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            android:backgroundTint="#b71c1c"/>

        <GridLayout
            android:id="@+id/gridOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            app:layout_constraintTop_toBottomOf="@id/btnEmergency"
            android:layout_marginTop="100dp">
            <Button
                android:id="@+id/btnAlertFamily"
                android:text="Alert Family"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_margin="5dp"
                android:backgroundTint="#0d47a1"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnMedicalConnect"
                android:text="Medical Connect"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_margin="5dp"
                android:backgroundTint="#1b5e20"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnAskDoctor"
                android:text="Ask a Doctor"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_margin="5dp"
                android:backgroundTint="#ffc107"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnShoutOut"
                android:text="ShoutOut"
                android:layout_height="110sp"
                android:layout_width="110sp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnNearby"
                android:text="Nearby"
                android:layout_height="110sp"
                android:layout_width="110sp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnBodyGuard"
                android:text="Body
                Guard"
                android:layout_height="110sp"
                android:layout_width="110sp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"/>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>